<h1><%= @user.username %>'s Profile</h1>

<%= gravatar_for @user, size: 200 %>


<% if logged_in? && current_user == @user %>
  <p> 
    <%= link_to "Edit Profile", edit_user_path(@user) %> | 
    <%= link_to 'Sign Out', logout_path, method: :delete %> 
  </p>
<% end %>

