<h1>Alpha Bloggers</h1>

<% @users.each do |user| %>
    <%= gravatar_for user %>
    <p>Username : <%= link_to user.username, user %></p>
    <p>Email : <%= user.email %></p>
    <p>Posted <%= user.articles.length %> articles</p>
    <p>Joined <%= time_ago_in_words(user.created_at) %></p>
    <p> 
      <%= link_to "View Profile", user %> 
      <%= link_to "Edit Profile", edit_user_path(user) %> 
    </p>
    <br>
<% end %>
